
<!DOCTYPE html>
<html>
<body>


<button onclick='Bicth()'>我是按鈕</button>
<p id="demo"></p>
<p id="myNumber_"></p>
<p id="End"></p>


    <button onclick="Try(1)"></button>
        <button onclick="Try(2)"></button>
        <button onclick="Try(3)"></button>

<script>
    var myNumber;
    //rook

    //1 = 剪刀
    //2 = 石頭
    //3 = 布
    function Try(x){
        Bicth(x);
    
    }
    function Bicth(x) {
        var random = Math.floor(Math.random() * (3 - 1 + 1)) + 1;

        myNumber = x;

        document.getElementById("demo").innerHTML = 'XDD';
        document.getElementById("demo").innerHTML = random;


 
        document.getElementById("myNumber_").innerHTML = myNumber;

        if (random == myNumber) {
            document.getElementById("End").innerHTML = '平手';

        } else if (random != myNumber) {
            document.getElementById("End").innerHTML = '笑了';

            if (myNumber == 1 && random == 3 || myNumber == 2 && random == 1) {
                document.getElementById("End").innerHTML = '贏了';
            } else {
                document.getElementById("End").innerHTML = '輸了';
            }

        }


    }


</script>

</body>
</html>
